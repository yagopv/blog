}

@font-face {
  font-family: 'Architects Daughter';
  font-style: normal;
  font-weight: 400;
  src: local('Architects Daughter'), local('ArchitectsDaughter'), url(https://fonts.gstatic.com/s/architectsdaughter/v6/RXTgOOQ9AAtaVOHxx0IUBBoTIN0je7AiOLXaVBr1ByU.woff2) format('woff2');
  unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2212, U+2215;
}

mainFont(weight = 400)
    font-family 'Open Sans', Helvetica
    font-weight weight
    font-style normal

secondaryFont(weight = 500)
    font-family 'Quicksand', 'Open Sans', Helvetica
    font-weight weight
    font-style normal

alternativeFont(weight = 400)
    font-family 'Architects Daughter', 'Quicksand', 'Open Sans', Helvetica
    font-weight weight
    font-style normal

h1,h2,h3,h4
    color main
    secondaryFont()